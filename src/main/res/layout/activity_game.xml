<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    >

    <ImageView
        android:id="@+id/life_status1"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:src="@drawable/heart"
        />
    <ImageView
        android:id="@+id/life_status2"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:src="@drawable/heart"
        android:layout_toRightOf="@id/life_status1"
        />
    <ImageView
        android:id="@+id/life_status3"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:src="@drawable/heart"
        android:layout_toRightOf="@id/life_status2"
        />

    <Button
        android:id="@+id/btn_stop"
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>


    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btn_stop"
        android:layout_above="@id/btn_player"
        android:columnCount="3"
        android:rowCount="3"
        android:alignmentMode="alignBounds"
        android:layout_widthPercent="100%"
        android:layout_aspectRatio="100%"
        android:background="@color/colorPrimaryDark"
        android:layout_centerVertical="true"
        >

        <GridView
            android:id="@+id/gv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_below="@id/btn_stop"
            android:gravity="left"
            android:numColumns="3"
            android:stretchMode="columnWidth"></GridView>


    </GridLayout>

    <Button
        android:id="@+id/move_left"
        android:text="Left"
        android:autoSizeTextType="uniform"
        android:layout_width="360px"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_player"
        android:layout_alignParentLeft="true"

        />
    <Button
        android:id="@+id/move_right"
        android:text="Right"
        android:autoSizeTextType="uniform"
        android:layout_width="360px"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_player"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/btn_player"
        android:layout_width="360px"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>





</RelativeLayout>
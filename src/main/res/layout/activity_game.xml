<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"

    >

    <ImageView
        android:id="@+id/life_status1"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/heart"

        />
    <ImageView
        android:id="@+id/life_status2"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:src="@drawable/heart"
        android:layout_toRightOf="@id/life_status1"
        />
    <ImageView
        android:id="@+id/life_status3"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:src="@drawable/heart"
        android:layout_toRightOf="@id/life_status2"
        />

    <Button
        android:id="@+id/btn_stop"
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>


    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_stop"
        android:layout_above="@id/btn_player"
        android:columnCount="3"
        android:alignmentMode="alignBounds"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        >

        <View
            android:id="@+id/enemy_view"
            android:layout_width="360px"
            android:layout_height="130px"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_below="@id/btn_stop"
            android:gravity="left"
            android:stretchMode="columnWidth"></View>

    </GridLayout>

    <Button
        android:id="@+id/move_left"
        android:text="Left"
        android:autoSizeTextType="uniform"
        android:layout_width="360px"
        android:layout_height="130px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"

        />
    <Button
        android:id="@+id/move_right"
        android:text="Right"
        android:autoSizeTextType="uniform"
        android:layout_width="360px"
        android:layout_height="130px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/btn_player"
        android:layout_width="360px"
        android:layout_height="130px"
        android:layout_centerInParent="true"
        android:layout_above="@id/move_right"
        />





</RelativeLayout>